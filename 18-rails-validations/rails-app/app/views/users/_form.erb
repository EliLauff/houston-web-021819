<!-- Form With: (model) -->
<!-- Model gets you:
    * The correct form action
    * The correct form method
    * The values for all of your inputs
    * Namespacing for all of your inputs
-->
<%= form_with( model: @user ) do | form | %>
    <div class="form-group">
        <%= form.label "Name" %>
        <% name_error_class = 'is-invalid' if(@errors["name"]) %>
        <%= form.text_field :name, class: "form-control #{name_error_class}" %>
        <% (@errors["name"] || [] ).each do | message | %>
            <span class="invalid-feedback"><%= message %></span>
        <% end %>
    </div>
    <div class="form-group">
        <%= form.label "Address" %>
        <%= form.text_field :address, class: "form-control #{ @errors["address"] ? 'is-invalid' : '' }" %>
        <% (@errors["address"] || [] ).each do | message | %>
            <span class="invalid-feedback"><%= message %></span>
        <% end %>
    </div>
    <div class="form-group">
        <%= form.label "Phone Number" %>
        <%= form.text_field :phone_number, class: "form-control #{ @errors["phone_number"] ? 'is-invalid' : '' }" %>
        <% (@errors["phone_number"] || [] ).each do | message | %>
            <span class="invalid-feedback"><%= message %></span>
        <% end %>
    </div>
    <div class="form-group">
        <%= form.label "Absences" %>
        <%= form.text_field :absences, class: "form-control #{ @errors["absences"] ? 'is-invalid' : '' }" %>
        <% (@errors["absences"] || [] ).each do | message | %>
            <span class="invalid-feedback"><%= message %></span>
        <% end %>
    </div>
    <%= form.submit %>
<% end %>