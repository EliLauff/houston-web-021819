<!-- Form With: (model) -->
<!-- Model gets you:
    * The correct form action
    * The correct form method
    * The values for all of your inputs
    * Namespacing for all of your inputs
-->
<%= form_with( model: @user ) do | form | %>
    <div>
        <%= form.label "Name" %>
        <%= form.text_field :name %>
    </div>
    <div>
        <%= form.label "Address" %>
        <%= form.text_field :address %>
    </div>
    <div>
        <%= form.label "Phone Number" %>
        <%= form.text_field :phone_number %>
    </div>
    <%= form.submit %>
<% end %>