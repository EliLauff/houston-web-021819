<h1>Pets</h1>
<!-- new_user_path: '/pets/new' -->
<%= link_to 'Create New Pet +', new_pet_path , class: 'btn btn-primary' %>
<ul class="list-group mt-3">
<% @pets.each do | pet | %>
    <li class="list-group-item">
        <%= link_to "#{pet.name}", pet, class: 'mr-2' %> 
        <%= link_to "/pets/#{pet.id}>/edit" do %>
            <i class="fa fa-edit"></i>
        <% end %>
         <%= link_to "/pets/#{pet.id}>", method: 'delete' do %>
            <i class="fa fa-trash"></i>
        <% end %>
   </li>
<% end %>
</ul>