<%= form_with( model: @pet ) do | form | %>
    <div class="form-group">
        <%= form.label "Name" %>
        <% name_error_class = 'is-invalid' if(@errors[:name].length > 0) %>
        <%= form.text_field :name, class: "form-control #{name_error_class}" %>
        <% (@errors[:name] || [] ).each do | message | %>
        
            <span class="invalid-feedback"><%= message %></span>
        <% end %>
    </div>
    <div class="form-group">
        <%= form.label "Breed" %>
        <%= form.text_field :breed, class: "form-control #{ @errors["breed"].length > 0 ? 'is-invalid' : '' }" %>
        <% (@errors["breed"] || [] ).each do | message | %>
            <span class="invalid-feedback"><%= message %></span>
        <% end %>
    </div>
    <div class="form-group">
        <%= form.label "Owner" %>
        <%= form.collection_select :owner_id, @owners, :id, :name, {}, class: "form-control #{ @errors["owner_id"].length > 0 ? 'is-invalid' : '' }" %>
        <% (@errors["owner_id"] || [] ).each do | message | %>
            <span class="invalid-feedback"><%= message %></span>
        <% end %>
    </div>
    <%= form.submit class: 'btn btn-primary' %>
<% end %>